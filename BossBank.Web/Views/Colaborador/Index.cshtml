@model IEnumerable<BossBank.Data.Entities.Colaborador>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar Novo</a>
</p>
<table id="table_id" class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ColaboradorNome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColaboradorCPF)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColaboradorCargo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColaboradorSetor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColaboradorGestor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ColaboradorSalario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorNome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorCPF)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorCargo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorSetor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorGestor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ColaboradorSalario)
                </td>
                <td class="row">
                    <a asp-action="Edit" class="btn btn-success m-1" asp-route-id="@item.ColaboradorId">Editar</a>
                    <a asp-action="Details" class="btn btn-info m-1" asp-route-id="@item.ColaboradorId">Detalhes</a>

                    <button type="button" class="btn btn-danger m-1" data-toggle="modal" data-target="#DeleteModal-@item.ColaboradorId">
                        Excluir
                    </button>

                    <!-- Modal -->
                <div class="modal fade" id="DeleteModal-@item.ColaboradorId" tabindex="-1" role="dialog" aria-labelledby="DeleteModalLabel" aria-hidden="true">
                        <div class="modal-dialog" role="document">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title" id="DeleteModalLabel">Excluir Colaborador</h5>
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                        <span aria-hidden="true">&times;</span>
                                    </button>
                                </div>
                                <div class="modal-body">
                                    Deseja realmente excluir o Colaborador @item.ColaboradorNome ?
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Não</button>
                                    <a asp-action="Delete" class="btn btn-danger" asp-route-id="@item.ColaboradorId">Sim</a>
                                </div>
                            </div>
                        </div>
                    </div>

                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
<script>
    $(document).ready( function () {
        $('#table_id').DataTable({
            "language": {
                "url": "//cdn.datatables.net/plug-ins/1.11.3/i18n/pt_br.json"
            }
        });
    } );
</script>
}